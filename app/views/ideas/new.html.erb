<h1>Create an Idea</h1>

<%= form_for [@user, @idea] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :notes %>
  <%= f.text_field :notes %>

  <%= f.label :category %>
  <%= f.collection_select :category_id, @categories, :id, :name %>

  <%= f.submit %>
<% end %>
